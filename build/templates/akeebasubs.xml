    <!-- Public front end files -->
    <files folder="frontend">
        <filename>akeebasubs.php</filename>
        <filename>dispatcher.php</filename>
        <filename>router.php</filename>
        <filename>toolbar.php</filename>

        <folder>controllers</folder>
        <folder>elements</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <!-- Front end translation files -->
    <languages folder="language/frontend">
        <language tag="en-GB">en-GB/en-GB.com_akeebasubs.ini</language>
    </languages>

    <!-- Media files -->
    <media destination="com_akeebasubs" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>invoices</folder>
        <folder>js</folder>
        <folder>tcpdf</folder>
    </media>

    <!-- Administrator back-end section -->
    <administration>
        <!-- Administration menu -->
        <menu view="cpanel" img="../media/com_akeebasubs/images/akeebasubs-16.png">COM_AKEEBASUBS</menu>
        <!-- Back-end files -->
        <files folder="backend">
            <filename>access.xml</filename>
            <filename>akeebasubs.php</filename>
            <filename>config.xml</filename>
            <filename>fof.xml</filename>
            <filename>version.php</filename>

            <folder>assets</folder>
            <folder>Controller</folder>
            <folder>CustomField</folder>
            <folder>Dispatcher</folder>
            <folder>Form</folder>
            <folder>Helper</folder>
            <folder>invoices</folder>
            <folder>Model</folder>
            <folder>PluginAbstracts</folder>
            <folder>sql</folder>
            <folder>Toolbar</folder>
            <folder>View</folder>
        </files>

        <!-- Back-end translation files -->
        <languages folder="language/backend">
            <language tag="en-GB">en-GB/en-GB.com_akeebasubs.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_akeebasubs.sys.ini</language>
        </languages>

    </administration>

    <scriptfile>script.akeebasubs.php</scriptfile>

    <!-- Update servers -->
    <updateservers>
        <server type="extension" priority="1" name="Akeeba Subscriptions">http://cdn.akeebabackup.com/updates/akeebasubs.xml</server>
    </updateservers>

