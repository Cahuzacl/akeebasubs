<?xml version="1.0" encoding="utf-8"?>
<form
	cssfiles="media://com_akeebasubs/css/backend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_AKEEBASUBS_COMMON_NORECORDS"
>
	<headerset>
		<header name="akeebasubs_blockrule_id" type="rowselect" tdwidth="20" />
		
		<header name="username" type="fieldsearchable"
			sortable="true" translate="false" />
		
		<header name="name" type="fieldsearchable"
			sortable="true" translate="false" />
		
		<header name="email" type="fieldsearchable"
			sortable="true" translate="false" />
		
		<header name="iprange" type="fieldsearchable"
			sortable="true" translate="false" />
		
		<header name="enabled" type="published" sortable="true" tdwidth="8%" />
		
	</headerset>

	<fieldset name="items">
		<field name="akeebasubs_blockrule_id" type="selectrow"/>

		<field name="username" type="text"
			show_link="true"
			url="index.php?option=com_akeebasubs&amp;view=blockrule&amp;id=[ITEM:ID]"
			empty_replacement="–"
		/>

		<field name="name" type="text"
			show_link="true"
			url="index.php?option=com_akeebasubs&amp;view=blockrule&amp;id=[ITEM:ID]"
			empty_replacement="–"
		/>

		<field name="email" type="text"
			show_link="true"
			url="index.php?option=com_akeebasubs&amp;view=blockrule&amp;id=[ITEM:ID]"
			empty_replacement="–"
		/>

		<field name="iprange" type="text"
			show_link="true"
			url="index.php?option=com_akeebasubs&amp;view=blockrule&amp;id=[ITEM:ID]"
			empty_replacement="–"
		/>

		<field name="enabled" type="published"/>
	</fieldset>
</form>